# ========================================
# CONFIGURAÇÃO DO PORTAL ESHOWS - EXEMPLO
# ========================================
# Copie este arquivo para .env.local e preencha com suas credenciais

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MOCK_MODE=false

# ========================================
# SUPABASE
# ========================================
# Obtenha em: https://app.supabase.com > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ... # Chave pública (anon)
SUPABASE_SERVICE_ROLE_KEY=eyJ... # Chave de serviço (service_role)

# Database URL (PostgreSQL) - Obtenha em: Settings > Database
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@[host]:[port]/postgres

# ========================================
# SEGURANÇA E CRIPTOGRAFIA
# ========================================
# Gere uma chave de 32 caracteres para criptografia
ENCRYPTION_MASTER_KEY=sua_chave_de_32_caracteres_aqui_base64=
NEXT_PUBLIC_ENCRYPTION_KEY=sua_chave_de_32_caracteres_aqui_base64=

# ========================================
# EMAIL (RESEND)
# ========================================
# Obtenha em: https://resend.com/api-keys
RESEND_API_KEY=re_seu_api_key_aqui
EMAIL_FROM=noreply@seudominio.com.br
EMAIL_FROM_NAME=Portal Eshows

# ========================================
# APIS EXTERNAS
# ========================================
# OpenWeather API - Obtenha em: https://openweathermap.org/api
OPENWEATHER_API_KEY=sua_api_key_openweather

# ========================================
# GITHUB (Opcional - Para automação e CI/CD)
# ========================================
# Crie um token em: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_seu_token_aqui
GITHUB_USERNAME=seu_usuario_github
REPO_NAME=nome_do_repositorio