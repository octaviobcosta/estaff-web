# Configurações de desenvolvimento para hot reload otimizado
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
FAST_REFRESH=true

# Configurações específicas do turbo mode
TURBOPACK_REMOTE_CACHE_READ_ONLY=false
TURBOPACK_LOG_LEVEL=info

# Configurações de watch para development
WATCHPACK_POLLING=500
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=500

# Configurações de performance
NEXT_PRIVATE_STANDALONE=false
NEXT_PRIVATE_DEBUG_CACHE=false